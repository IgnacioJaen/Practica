<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.CategoryDao">
    <select id="findByCategoryId" resultType="bo.ucb.edu.ingsoft.model.Category">
        SELECT
               category_id as categoryId,
               name as name
        FROM category
        WHERE
            category_id = 1
    </select>

    <insert id="categoryinsert" parameterType="bo.ucb.edu.ingsoft.model.Category">
        INSERT INTO category VALUES (
            null, #{Name}, 1, #{txId}, #{txHost}, #{txUserId}, #{txDate}
        )
    </insert>

    <update id="categoryupdate" parameterType="bo.ucb.edu.ingsoft.model.Category">
        UPDATE contact
        SET second_name = 'Adrian', `second_surname` = 'Tancara'
        WHERE contact_id = 3;

    </update>

    <delete id="categorydelete" parameterType="bo.ucb.edu.ingsoft.model.Category">
        DELETE
        FROM contact
        WHERE
              contact_id = 3
    </delete>


</mapper>
